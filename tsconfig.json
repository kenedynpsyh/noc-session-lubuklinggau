{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5", "dom.iterable", "esnext.asynciterable"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@serve/*": ["./serve/*"],
      "@__tests__/*": ["./__tests__/*"]
    }
  },
  "include": ["serve/**/*.ts", "serve/**/*.js", "__tests__/**/*.spec.ts"],
  "exclude": ["node_modules"]
}
